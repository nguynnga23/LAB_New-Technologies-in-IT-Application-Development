<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="index.css">
</head>
<body>

    <div class="content">
        <h2>Danh sách các môn học</h2>
        <form action="/courses/save" method="post">
            <input type="text" name="id" placeholder="Nhập ID">
            <br>
            <input type="text" name="name" placeholder="Nhập tên môn học">
            <br>
            <input type="text" name="course_type" placeholder="Nhập loại môn học">
            <br>
            <input type="text" name="semester" placeholder="Nhập học kỳ">
            <br>
            <input type="text" name="department" placeholder="Nhập khoa">
            <br>
            <button type="submit">Submit</button>
        </form>
        <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên môn học</th>
                    <th>Loại môn học</th>
                    <th>Học kỳ</th>
                    <th>Khoa</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach(item  => { %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.course_type %></td>
                    <td><%= item.semester %></td>
                    <td><%= item.department %></td>
                    <td>
                        <form action="/courses/delete" method="POST">
                            <input type="hidden" name="id" value="<%= item.id %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    </div>
</body>
</html>